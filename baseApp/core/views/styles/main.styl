@import "libs/cssreset-min"
@import "libs/snippets"
@import "../root/element/carousel/carousel"
@import "../root/element/navigationbar/navigationbar"

@font-face
  font-family: "Dosis SemiBold"
  font-style: normal
  src: url("../../../../res/img/Dosis-SemiBold.ttf")

@keyframes pop-in
  from
    -webkit-transform scale(0)
  to
    -webkit-transform scale(1) 
    
.hidden-input
  position: absolute;
  top: -200px
  width: 0px
  height: 0px
  opacity: 0
  // not sure yet: make sure user can't select text within the input
  -webkit-user-select: none


/** mobile reset **/
*
  // webkit: remove browser default highlight color
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0)
  // set boz-sizing on all element
  box-sizing: border-box
  -webkit-box-sizing: border-box

body
  // Android 233: fix flickering during transition, removing the overlay textfield by android
  -webkit-perspective: 1000
  -webkit-transform-style: preserve-3d
  > *
    -webkit-transform: translate3d(0,0,0) rotate(0) scale(1)
    // -webkit-backface reduce the css3 glinching, BUT
    // don't apply any backface attribute on input wrapper!! (like form)
    // backface visibility will drive input scrolling like yoyo ,CRAZY!!!!
    -webkit-backface-visibility: hidden
/** mobile reset **/

a
  text-decoration: none

img
  display: block
  
body
  > div
    position: absolute
    top: 0
    left: 0
    width: 100%
    display: none
    // can't set height = 100%, it will return wrong height pixel 
    &[selected="true"]
      display: block
      z-index: 100
  > .waiting-spinner
    z-index: 1000
    .shader
      background-color: rgb(80, 80, 80, 0.6)
      position: absolute
      top: 40%
      left: 40%
      width: 20%
      height: 13%
      border-radius(10px)
      text-align: center
      img
        margin-top: 26%
        margin-left: auto
        margin-right: auto
        width: 40%
  > .page
    display: block
    z-index:1
    -webkit-transform: translateX(100%)
    > .content
      position: absolute
      top: 0
      left: 0
      width: 100%



.list-view
  >.spacer
    position: static
    height: 28px
    background-color: #111111
    color: #fff
    line-height: 28px
    padding: 0px 10px
    .day
      float: right
    .date
      float: left

  >p
    position: static
    >a
      position: relative
      display: block
      top: 0px
      left: 0px
      height: 100%
      width: 100%
      span
        position: absolute
     
      span.title
        color: #4C556C
        font-size: 16px
        left: 100px
        margin-left: 5px
        line-height: 68px
        font-weight: bold
      span.arrow
        right: 0px
        margin-right: 5px
        >img
          width: 60px
          height: 60px
      span.thumb
        >img
          width: 88px
          height: 88px
  >p:last-child
    border-bottom: none

.clearfix
  zoom: 1
  &:after
    clear: both
    height: 0
    visibility: hidden
  &:before, 
  &:after 
    display: table
    content: ""